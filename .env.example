# Copy this file to .env and replace placeholder values with your actual credentials

# PostgreSQL Database URL
DATABASE_URL="your_postgres_database_url"

# JSON Web Token Secret
JWT_SECRET="your_jwt_secret"

# AWS Credentials for SES
ACCESS_KEY="your_aws_access_key"
SECRET_KEY="your_aws_secret_key"
AWS_SES_REGION="your_aws_ses_region"

# Email Configuration
FROM_EMAIL="your_email@example.com"

# SMTP Configuration for SES
SMTP_USERNAME="your_smtp_username"
SMTP_PWD="your_smtp_password"
SMTP_HOST="your_smtp_host"

# Forgot Password URL
FORGOT_PWD="https://your_forgot_password_url.com"

# S3 Bucket Name
S3_BUCKET="your_s3_bucket_name"

# Reset Password URLs
ADMIN_FORGOT_PWD="http://localhost:8000/api/v1/admin/resetPwd"
DRIVER_FORGOT_PWD="http://localhost:8000/api/v1/driver/resetPwd/"

# Twilio Configuration
TWILIO_ID="your_twilio_account_sid"
TWILIO_AUTH="your_twilio_auth_token"
FROM_NUMBER="+1234567890"
